<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Yoton.PageConnexion"
             BackgroundColor="DarkCyan"
             Title="Se connecter">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center"> 
            <Label Text="Saisissez votre adresse mail ou votre nom d'utilisateur" FontSize="20" TextColor="White"
                   HorizontalOptions="StartAndExpand" Padding="30, 0" />
            <StackLayout Padding="30, 0" HorizontalOptions="FillAndExpand">
                <Entry ClearButtonVisibility="WhileEditing" Placeholder="Nom d'utilisateur ou adresse mail"
                HorizontalOptions="Fill" />
            </StackLayout>

            <Label Text="Entrez votre mot de passe" FontSize="25" TextColor="White" HorizontalOptions="StartAndExpand" Padding="30, 0" />
            <StackLayout Padding="30, 0" HorizontalOptions="FillAndExpand">
                <Entry IsPassword="True" Placeholder="Mot de passe" ClearButtonVisibility="WhileEditing"
                HorizontalOptions="Fill" />
            </StackLayout>

            <Button Text="Connexion" FontSize="20" BackgroundColor="LightSeaGreen" TextColor="White"
                
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>